{
  "name": "private-dao-voting",
  "version": "0.1.0",
  "description": "Private DAO Voting on Arcium Network",
  "license": "MIT",
  "scripts": {
    "build": "anchor build",
    "test": "anchor test",
    "test:unit": "ts-mocha -p ./tsconfig.json tests/mock-arcium.test.ts --timeout 30000",
    "test:e2e": "anchor test --skip-local-validator",
    "test:all": "npm run test:unit && npm run test:e2e",
    "test:watch": "ts-mocha -p ./tsconfig.json tests/**/*.test.ts --watch --timeout 30000",
    "lint": "eslint . --ext .ts",
    "clean": "rmdir /s /q node_modules target .anchor 2>nul || true"
  },
  "dependencies": {
    "@coral-xyz/anchor": "0.32.1",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.87.6"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.10.6",
    "chai": "^4.3.10",
    "mocha": "^10.2.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
